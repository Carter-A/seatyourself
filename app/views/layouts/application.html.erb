<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/restaurants">Seat Yourself</a>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li> <%= link_to "/users/#{current_user.id}" do %>
            Signed in as <%= current_user.name.capitalize %>
            <% end %>
          </li>
          <li><%= link_to "Log out", session_path("current"), :method => :delete %></li>
        <% else %>
          <li><%= link_to "Sign Up", '/users/new' %></li>
          <li><%= link_to "Login", new_session_path%></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div>
</nav>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
    <% if flash[:notice] %>
      <div class="alert alert-success" role="alert"> <%= flash[:notice] %> </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
    <% end %>
    </div>
  </div>
</div>


<%= yield %>

<footer class="footer">
  <div class="container">
    <p class="text-muted">&copy; Carter & Wania</p>
  </div>
</footer>

</body>
</html>
