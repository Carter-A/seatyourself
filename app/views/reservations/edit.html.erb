<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= form_for ([@reservation.restaurant, @reservation])  do |f| %>
        <h2><%= @reservation.restaurant.name %></h2>
        <%= f.label :date %>
        <%= f.date_field :date, class: "form-control" %>

        <%= f.label :time %>
        <%= f.time_field :time, class: "form-control", value: "11:00:00", step: "3600", min: "11:00", max: "20:00" %>

        <%= f.label :party_size %>
        <%= f.number_field :party_size, class: "form-control" %>

        <%= f.submit "Edit Reservation", class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>
